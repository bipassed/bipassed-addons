<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Lobotomy</defName>
    <label>lobotomy</label>
    <description>The removal of the frontal lobe, preventing any sort of coherent thought.</description>
    <initialSeverity>1</initialSeverity>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>Lobotomize</defName>
    <label>lobotomize</label>
    <description>Lobotomize a patient.</description>
    <jobString>Removing frontal lobe.</jobString>
    <isViolation>true</isViolation>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>Lobotomy</addsHediff>
  </RecipeDef>

</Defs>
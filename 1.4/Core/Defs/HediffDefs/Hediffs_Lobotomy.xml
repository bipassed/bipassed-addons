<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
        <defName>Lobotomy</defName>
        <label>lobotomy</label>
        <description>The removal of the frontal lobe, preventing any sort of coherent thought.</description>
        <initialSeverity>1</initialSeverity>
        <stages>
        <li>
            <capMods>
            <li>
                <capacity>Consciousness</capacity>
                <offset>-0.4</offset>
            </li>
            </capMods>
        </li>
        </stages>
    </HediffDef>

  <RecipeDef Abstract="True" Name="Lobotomy">
    <effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_Surgery</soundWorking>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workSkill>Medicine</workSkill>
    <workSkillLearnFactor>16</workSkillLearnFactor>
  </RecipeDef>

  <RecipeDef ParentName="Lobotomy">
    <defName>Lobotomize</defName>
    <label>lobotomize</label>
    <description>Render a creature incoherent by removing the frontal lobe.</description>
    <workerClass>Recipe_Surgery</workerClass>
    <jobString>Lobotomizing.</jobString>
    <workAmount>2000</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <targetsBodyPart>false</targetsBodyPart>
    <isViolation>true</isViolation>
    <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    <deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
    <addsHediff>Lobotomy</addsHediff>
  </RecipeDef>

</Defs>